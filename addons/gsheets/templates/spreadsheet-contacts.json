{
  "title": "Contacts",
  "description": "Simple contact form connected to a spreadsheet",
  "fields": [
    {
      "ref": "#form",
      "name": "title",
      "default": "Contacts"
    }
  ],
  "form": {
    "title": "Contacts",
    "fields": [
      {
        "name": "email",
        "label": "Email",
        "type": "email",
        "required": true
      },
      {
        "name": "firstname",
        "label": "Firstname",
        "type": "text",
        "required": true
      },
      {
        "name": "lastname",
        "label": "Lastname",
        "type": "text",
        "required": true
      },
      {
        "name": "phone",
        "label": "Phone",
        "type": "text"
      }
    ]
  },
  "bridge": {
    "custom_fields": [
      {
        "name": "language",
        "value": "$language"
      }
    ]
  }
}
